{% extends "@admin/base-list.twig" %}

{% block title %}
  Listado de entradas
{% endblock %}

{% block header %}
  <h3>Listado de entradas</h3>
{% endblock %}

{% block ctrls %}
  {% include "@admin/controls/buttons.twig" with {href_add:"entrada.php"} %}
{% endblock %}

{% block root %}
  {% if entradas %}
    <table id="table-model" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead class="thead-dark">
      <tr>
        <th style="width: 75px"></th>
        <th>Cod</th>
        <th>Fecha</th>
        <th>Empleado</th>
      </tr>
      </thead>
      <tbody>
      {% for entrada in entradas %}
        <tr>
          <td>
            entrada.php?option=find&id={{ entrada.id }},
            entrada.php?option=delete&id={{ entrada.id }}
          </td>
          <td>{{ entrada.codigo }}</td>
          <td>{{ entrada.fecha }}</td>
          <td>{{ entrada.id_empleado }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  {% else %}
    <h2>Sin datos</h2>
  {% endif %}
{% endblock %}