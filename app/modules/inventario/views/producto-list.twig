{% extends "@admin/base-list.twig" %}

{% block title %}
  Listado de productos
{% endblock %}

{% block header %}
  <h1>Listado de productos</h1>
{% endblock %}

{% block ctrls %}
  {% include "@admin/controls/buttons.twig" with {href_add:"producto.php"} %}
{% endblock %}

{% block root %}
  {% if productos %}
    <table id="table-model" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead class="thead-dark">
      <tr>
        <th style="width: 75px"></th>
        <th>Codigo</th>
        <th>Nombre</th>
        <th>Marca</th>
        <th>Tipo</th>
        <th>Vol</th>
        <th>Uni</th>
        <th>.Bs</th>
      </tr>
      </thead>
      <tbody>
      {% for producto in productos %}
        <tr>
          <td>
            producto.php?option=find&id={{ producto.id }},
            producto.php?option=delete&id={{ producto.id }}
          </td>
          <td>{{ producto.codigo }}</td>
          <td>{{ producto.nombre }}</td>
          <td>{{ producto.marca }}</td>
          <td>{{ producto.tipo }}</td>
          <td>{{ producto.volumen }}</td>
          <td>{{ producto.unidad }}</td>
          <td>{{ producto.precio }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  {% else %}
    <h2>Sin datos</h2>
  {% endif %}
{% endblock %}