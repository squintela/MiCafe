{% extends "@admin/base-list.twig" %}

{% block title %}
  Entrada de productos
{% endblock %}

{% block header %}
  <h3>Entrada | <small>{{ entrada.codigo }}</small> | {{ entrada.fecha }}</h3>
{% endblock %}

{% block ctrls %}
  {% include "@admin/controls/buttons.twig"
    with {
    href_add_url:"entradaproducto.php?option=add&codigo=",
    href_add_url_value: entrada.codigo,
    href_find:"entrada.php?option=find&id=",
    href_find_value: entrada.id
  }
  %}
{% endblock %}

{% block root %}
  {% if entradaproductos %}
    <table id="table-model" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead class="thead-dark">
      <tr>
        <th style="width: 75px"></th>
        <th>Cod Producto</th>
        <th>Producto</th>
        <th>Cantidad</th>
        <th>Observacion</th>
      </tr>
      </thead>
      <tbody>
      {% for entradaproducto in entradaproductos %}
        <tr>
          <td>
          </td>
          <td>{{ entradaproducto.codigo }}</td>
          <td>{{ entradaproducto.id_producto }}</td>
          <td>{{ entradaproducto.cantidad }}</td>
          <td>{{ entradaproducto.observacion }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  {% else %}
    <h2>Sin datos</h2>
  {% endif %}
{% endblock %}