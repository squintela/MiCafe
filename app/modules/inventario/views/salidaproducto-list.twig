{% extends "@admin/base-list.twig" %}

{% block title %}
  Salida de productos
{% endblock %}

{% block header %}
  <h3>Salida | <small>{{ salida.codigo }}</small> | {{ salida.fecha }}</h3>
{% endblock %}

{% block ctrls %}
  {% include "@admin/controls/buttons.twig"
    with {
    href_add_url:"salidaproducto.php?option=add&codigo=",
    href_add_url_value: salida.codigo,
    href_find:"salida.php?option=find&id=",
    href_find_value: salida.id
  }
  %}
{% endblock %}

{% block root %}
  {% if salidaproductos %}
    <table id="table-model" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead class="thead-dark">
      <tr>
        <th style="width: 75px"></th>
        <th>Cod Producto</th>
        <th>Producto</th>
        <th>Cantidad</th>
        <th>Observacion</th>
      </tr>
      </thead>
      <tbody>
      {% for salidaproducto in salidaproductos %}
        <tr>
          <td>
          </td>
          <td>{{ salidaproducto.codigo }}</td>
          <td>{{ salidaproducto.id_producto }}</td>
          <td>{{ salidaproducto.cantidad }}</td>
          <td>{{ salidaproducto.observacion }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  {% else %}
    <h2>Sin datos</h2>
  {% endif %}
{% endblock %}