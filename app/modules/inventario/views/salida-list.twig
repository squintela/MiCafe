{% extends "@admin/base-list.twig" %}

{% block title %}
  Listado de salidas
{% endblock %}

{% block header %}
  <h3>Listado de salidas</h3>
{% endblock %}

{% block ctrls %}
  {% include "@admin/controls/buttons.twig" with {href_add:"salida.php"} %}
{% endblock %}

{% block root %}
  {% if salidas %}
    <table id="table-model" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead class="thead-dark">
      <tr>
        <th style="width: 75px"></th>
        <th>Cod</th>
        <th>Fecha</th>
        <th>Empleado</th>
      </tr>
      </thead>
      <tbody>
      {% for salida in salidas %}
        <tr>
          <td>
            salida.php?option=find&id={{ salida.id }},
            salida.php?option=delete&id={{ salida.id }}
          </td>
          <td>{{ salida.codigo }}</td>
          <td>{{ salida.fecha }}</td>
          <td>{{ salida.id_empleado }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  {% else %}
    <h2>Sin datos</h2>
  {% endif %}
{% endblock %}