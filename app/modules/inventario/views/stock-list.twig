{% extends "@admin/base-list.twig" %}

{% block title %}
  Listado de stock
{% endblock %}

{% block header %}
  <h1>Listado de stock</h1>
{% endblock %}

{% block ctrls %}
  {% include "@admin/controls/buttons.twig" with {href_add:"producto.php"} %}
{% endblock %}

{% block root %}
  {% if stocks %}
    <table id="table-model" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead class="thead-dark">
      <tr>
        <th style="width: 75px"></th>
        <th>Cod Producto</th>
        <th>Producto</th>
        <th>Entradas</th>
        <th>Salidas</th>
        <th>Existencias</th>
      </tr>
      </thead>
      <tbody>
      {% for stock in stocks %}
        <tr>
          <td>
          </td>
          <td>{{ stock.codigo }}</td>
          <td>{{ stock.id_producto }}</td>
          <td>{{ stock.entradas }}</td>
          <td>{{ stock.salidas }}</td>
          <td>{{ stock.existencias }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  {% else %}
    <h2>Sin datos</h2>
  {% endif %}
{% endblock %}