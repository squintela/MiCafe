{% extends "@admin/base-list.twig" %}

{% block title %}
  Listado de usuarios
{% endblock %}

{% block header %}
  <h1>Listado de usuarios</h1>
{% endblock %}

{% block ctrls %}
  {% include "@admin/controls/buttons.twig" with {href_add:"usuario.php"} %}
{% endblock %}

{% block root %}
  {% if usuarios %}
    <table id="table-model" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead class="thead-dark">
      <tr>
        <th style="width: 75px"></th>
        <th>User Name</th>
        <th>Email</th>
      </tr>
      </thead>
      <tbody>
      {% for usuario in usuarios %}
        <tr>
          <td>
            usuario.php?option=find&id={{ usuario.id }},
            usuario.php?option=delete&id={{ usuario.id }}
          </td>
          <td>{{ usuario.username }}</td>
          <td>{{ usuario.email }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  {% else %}
    <h2>Sin datos</h2>
  {% endif %}
{% endblock %}