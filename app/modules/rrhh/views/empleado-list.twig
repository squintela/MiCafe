{% extends "@admin/base-list.twig" %}

{% block title %}
  Listado de empleados
{% endblock %}

{% block header %}
  <h1>Listado de empleados</h1>
{% endblock %}

{% block ctrls %}
  {% include "@admin/controls/buttons.twig" with {href_add:"empleado.php"} %}
{% endblock %}

{% block root %}
  {% if empleados %}
    <table id="table-model" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead class="thead-dark">
      <tr>
        <th style="width: 75px"></th>
        <th>Nombres</th>
        <th>Apellidos</th>
        <th>CI</th>
        <th>Genero</th>
        <th>Cargo</th>
        <th>Usuario</th>
      </tr>
      </thead>
      <tbody>
      {% for empleado in empleados %}
        <tr>
          <td>
            empleado.php?option=find&id={{ empleado.id }},
            empleado.php?option=delete&id={{ empleado.id }}
          </td>
          <td>{{ empleado.nombres }}</td>
          <td>{{ empleado.apellidos }}</td>
          <td>{{ empleado.ci }}</td>
          <td>{{ empleado.genero }}</td>
          <td>{{ empleado.cargo }}</td>
          <td>{{ empleado.id_usuario }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  {% else %}
    <h2>Sin datos</h2>
  {% endif %}
{% endblock %}