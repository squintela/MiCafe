{% extends "@admin/base-list.twig" %}

{% block title %}
  Listado de clientes
{% endblock %}

{% block header %}
  <h1>Listado de clientes</h1>
{% endblock %}

{% block ctrls %}
  {% include "@admin/controls/buttons.twig" with {href_add:"cliente.php"} %}
{% endblock %}

{% block root %}
  {% if clientes %}
    <table id="table-model" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead class="thead-dark">
      <tr>
        <th style="width: 75px"></th>
        <th>Nombres</th>
        <th>Apellidos</th>
        <th>Celular</th>
        <th>NIT</th>
      </tr>
      </thead>
      <tbody>
      {% for cliente in clientes %}
        <tr>
          <td>
            cliente.php?option=find&id={{ cliente.id }},
            cliente.php?option=delete&id={{ cliente.id }}
          </td>
          <td>{{ cliente.nombres }}</td>
          <td>{{ cliente.apellidos }}</td>
          <td>{{ cliente.celular }}</td>
          <td>{{ cliente.nit }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  {% else %}
    <h2>Sin datos</h2>
  {% endif %}
{% endblock %}