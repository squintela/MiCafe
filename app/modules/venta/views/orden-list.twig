{% extends "@admin/base-list.twig" %}

{% block title %}
  Listado de orden
{% endblock %}

{% block header %}
  <h3>Pedido | <small>{{ pedido.getCodigo() }}</small> | {{ pedido.getFecha() }}</h3>
{% endblock %}

{% block ctrls %}
  {% include "@admin/controls/buttons.twig"
    with {
      href_add_url:"orden.php?option=add&codigo=",
      href_add_url_value: pedido.getCodigo(),
      href_find:"pedido.php?option=find&id=",
      href_find_value: pedido.getId()
    }
  %}
{% endblock %}

{% block root %}
  {% if ordenproductos %}
    <table id="table-model" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead class="thead-dark">
      <tr>
        <th style="width: 75px"></th>
        <th>Producto</th>
        <th>.Bs</th>
        <th>Cantidad</th>
        <th>Total .Bs</th>
      </tr>
      </thead>
      <tbody>
      {% for orden in ordenproductos %}
        <tr>
          <td>
          </td>
          <td>{{ orden.nombre }}</td>
          <td>{{ orden.precio }}</td>
          <td>{{ orden.cantidad }}</td>
          <td>{{ orden.precio_total }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  {% else %}
    <h2>Sin datos</h2>
  {% endif %}
{% endblock %}