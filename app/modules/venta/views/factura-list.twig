{% extends "@admin/base-list.twig" %}

{% block title %}
  Listado de facturas
{% endblock %}

{% block header %}
  <h1>Listado de facturas</h1>
{% endblock %}

{% block ctrls %}
  {% include "@admin/controls/buttons.twig" with {href_add_url:"pedido.php?option=list"} %}
{% endblock %}

{% block root %}
  {% if facturas %}
    <table id="table-model" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead class="thead-dark">
      <tr>
        <th style="width: 75px"></th>
        <th>Codigo</th>
        <th>Fecha</th>
        <th>NIT</th>
        <th>Monto</th>
        <th>Cliente</th>
      </tr>
      </thead>
      <tbody>
      {% for factura in facturas %}
        <tr>
          <td>
            factura.php?option=find&id={{ factura.id }},
          </td>
          <td>{{ factura.codigo }}</td>
          <td>{{ factura.fecha }}</td>
          <td>{{ factura.nit }}</td>
          <td>{{ factura.monto }}</td>
          <td>{{ factura.cliente }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  {% else %}
    <h2>Sin datos</h2>
  {% endif %}
{% endblock %}
