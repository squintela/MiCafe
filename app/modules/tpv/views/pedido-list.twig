{% extends "@tpv/base-list.twig" %}

{% block title %}
  Listado de pedidos
{% endblock %}

{% block header %}
  <h1>Listado de pedidos</h1>
{% endblock %}

{% block ctrls %}
  {% include "@admin/controls/buttons.twig" with { href_add_url:"tpv.php?option=addpedido&id_cliente=", href_add_url_value: id_cliente } %}
{% endblock %}

{% block root %}
  {% if pedidos %}
    <table id="table-model" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead class="thead-dark">
      <tr>
        <th style="width: 75px"></th>
        <th>Cod</th>
        <th>Fecha</th>
        <th>.Bs</th>
        <th>Estado</th>
        <th>Tipo Pago</th>
      </tr>
      </thead>
      <tbody>
      {% for pedido in pedidos %}
        <tr>
          <td>
            tpv.php?option=findpedido&id={{ pedido.id }},#
          </td>
          <td>{{ pedido.codigo }}</td>
          <td>{{ pedido.fecha }}</td>
          <td>{{ pedido.monto }}</td>
          <td>{{ pedido.estado }}</td>
          <td>{{ pedido.tipo_pago }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  {% else %}
    <h2>Sin datos</h2>
  {% endif %}
{% endblock %}