{% extends "@admin/base-list.twig" %}

{% block title %}
  Entradas mes
{% endblock %}

{% block header %}
  <div class="row">
    <div class="col-md-6">
      <h1>Entradas mes <small>{{ mes }}</small></h1>
    </div>
    <div class="col-md-6">
      <div class="row">
        <form action="reporte.php" method="get">
            <input type="text" name="option" value="entrada" hidden>
            <input type="text" name="list" value="mes" hidden>
            <input type="month" name="mes" class="form-control">
          <button type="submit" class="form-control btn-success">Mostrar</button>
        </form>
      </div>
    </div>
  </div>

{% endblock %}

{% block root %}
  <h3>Gasto total <small>{{ monto }} .Bs</small> Total productos <small>{{ total }} </small></h3>
  <br>
  {% if entradas %}
    <table id="table-model" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead class="thead-dark">
      <tr>
        <th style="width: 75px"></th>
        <th>Cod</th>
        <th>Producto</th>
        <th>Cantidad</th>
        <th>.Bs</th>
      </tr>
      </thead>
      <tbody>
      {% for entrada in entradas %}
        <tr>
          <td>

          </td>
          <td>{{ entrada.codigo }}</td>
          <td>{{ entrada.nombre }}</td>
          <td>{{ entrada.cantidad }}</td>
          <td>{{ entrada.precio }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  {% else %}
    <h2>Sin datos</h2>
  {% endif %}
{% endblock %}