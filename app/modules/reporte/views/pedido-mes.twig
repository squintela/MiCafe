{% extends "@admin/base-list.twig" %}

{% block title %}
  Utilidades mes
{% endblock %}

{% block header %}
  <div class="row">
    <div class="col-md-6">
      <h1>Utilidades Mes <small>{{ mes }}</small></h1>
    </div>
    <div class="col-md-6">
      <div class="row">
        <form action="reporte.php" method="get">
          <input type="text" name="option" value="pedido" hidden>
          <input type="text" name="list" value="mes" hidden>
          <input type="month" name="mes" class="form-control">
          <button type="submit" class="form-control btn-success">Mostrar</button>
        </form>
      </div>
    </div>
  </div>

{% endblock %}

{% block root %}
  <h3>Monto total <small>{{ total.monto }} .Bs</small> Total pedidos <small>{{ total.pedidos }} </small></h3>
  <br>
  {% if pedidos %}
    <table id="table-model" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead class="thead-dark">
      <tr>
        <th style="width: 75px"></th>
        <th>Cod</th>
        <th>Producto</th>
        <th>.Bs x Uni</th>
        <th>Cantidad</th>
        <th>.Bs Total</th>
      </tr>
      </thead>
      <tbody>
      {% for pedido in pedidos %}
        <tr>
          <td>
          </td>
          <td>{{ pedido.codigo }}</td>
          <td>{{ pedido.nombre }}</td>
          <td>{{ pedido.precio_unid }}</td>
          <td>{{ pedido.cantidad }}</td>
          <td>{{ pedido.precio }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  {% else %}
    <h2>Sin datos</h2>
  {% endif %}
{% endblock %}